<Window x:Class="PasswordValut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordValut"
        mc:Ignorable="d"
        Title="PassBook" Height="340" Width="600" Background="#042142">
    <Window.Resources>

        <Style x:Key="TextElement" TargetType="Label" >
            <Setter Property="Foreground" Value="AntiqueWhite"/>
            <Setter Property="FontSize" Value="18"/>
            <!--Foreground="AntiqueWhite" FontSize="18"-->
        </Style>
        
        
    </Window.Resources>
    <Grid Margin="10" >

        <TabControl VerticalAlignment="Top" Height="337" >
            <TabItem Header="Passwords">
                <Grid>
                    <StackPanel Orientation="Horizontal" >
                        <TextBox Name="Bar" Width="394" Margin="0,0,100,258"/>

                        <Button x:Name="Control" Width="81" Content="New" Click="Control_Click" Margin="0,0,0,253" />
                    </StackPanel>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,57,0,0" >
                        <ListView x:Name="Viewer" BorderThickness="2"  BorderBrush="Black" >

                        </ListView>
                    </ScrollViewer>
                </Grid>                
            </TabItem>
            <TabItem Header="Run down">
                <StackPanel>
                    <TextBlock Text="Work on this">
                        </TextBlock>
                </StackPanel>
            </TabItem>
            <TabItem Header="Generate Password">
                <StackPanel>
                    <Label FontSize="40" Foreground="DarkBlue">
                        Newly generated Password :
                        </Label>
                            <TextBlock Text="XXX" x:Name="PasswordGen" FontSize="30" Margin="20" Foreground="Black">
                    </TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="Signin" Click="Gen_MouseDown" Margin="40" Width="118" Content="Refresh"  Background="#545d5a" Foreground="White" FontSize="18"/>
                        <Button x:Name="use" Click="use_Click" Margin="40" Width="118" Content="Use"  Background="#545d5a" Foreground="White" FontSize="18"/>

                    </StackPanel>
                </StackPanel>
               
            </TabItem>
            <TabItem Header="User">
                <StackPanel>
                    <TextBlock x:Name="Userinformation" Text="" Height="318">
                    </TextBlock>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
