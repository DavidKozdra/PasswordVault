<Window x:Class="PasswordValut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordValut"
        mc:Ignorable="d"
        Title="PassBook" Height="800" Width="600" Background="#042142">
    <Window.Resources>

        <Style x:Key="TextElement" TargetType="Label" >
            <Setter Property="Foreground" Value="AntiqueWhite"/>
            <Setter Property="FontSize" Value="18"/>
            <!--Foreground="AntiqueWhite" FontSize="18"-->
        </Style>
        
        
    </Window.Resources>
    <Grid Margin="10">

        <Grid>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,372">
                <TextBox Name="Bar" Width="242" Margin="0,0,0,10"/>
                <Button Name="Control" Width="81" Content="Add" Click="Control_Click" Margin="0,0,0,10" />
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,57,0,0" >
                <ListView x:Name="Viewer" BorderThickness="2"  BorderBrush="Black" >

                </ListView>
            </ScrollViewer>

        </Grid>
    </Grid>
</Window>
